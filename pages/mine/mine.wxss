page {
  background-color: #f6f6f6;
  font-size: 30rpx;
  font-family: 'Microsoft YaHei';
  color: #000;
}
.header image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
}

.header {
  height: 250rpx;
  width: 100%;
  background-color: #e45050;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.more {
  padding: 0 20rpx;
  background-color: #ffffff;
}

.more .left image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
}

.more .left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.box:nth-child(3){
  border-bottom: none;
}

.more .right {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}
